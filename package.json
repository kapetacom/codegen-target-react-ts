{
    "name": "@kapeta/language-target-react-ts",
    "version": "local",
    "description": "Provides code generation support for ReactJS + Typescript",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kapetacom/codegen-target-react-ts.git"
    },
    "main": "node/index.js",
    "types": "node/index.d.ts",
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "kapeta"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/kapetacom/codegen-target-react-ts/issues"
    },
    "homepage": "https://github.com/kapetacom/codegen-target-react-ts#readme",
    "prettier": "@kapeta/prettier-config",
    "dependencies": {
        "@kapeta/codegen-target": "<2",
        "@kapeta/nodejs-process": "^1.1.0",
        "@kapeta/schemas": "<2",
        "prettier": "^2.8.8",
        "snake-case": "^3.0.4"
    },
    "peerDependencies": {
        "@kapeta/ui-web-types": "<2"
    },
    "bundledDependencies": true,
    "devDependencies": {
        "@babel/cli": "^7.18.10",
        "@babel/core": "^7.18.13",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-decorators": "^7.18.10",
        "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
        "@babel/plugin-proposal-private-methods": "^7.18.6",
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@babel/preset-env": "^7.18.10",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.18.6",
        "@jest/globals": "^29.1.2",
        "@kapeta/codegen": "<2",
        "@kapeta/eslint-config": "^0.6.0",
        "@kapeta/prettier-config": "^0.6.0",
        "@kapeta/ui-web-types": "<2",
        "@tsconfig/node18": "^1.0.1",
        "babel-loader": "^8.2.5",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "^29.1.2",
        "json-loader": "^0.5.7",
        "ts-jest": "^29.1.0",
        "typescript": "^4.8.2",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0",
        "yaml": "^2.2.1",
        "yaml-loader": "^0.5.0"
    },
    "scripts": {
        "prepublishOnly": "npm run test && npm run build",
        "build:web": "NODE_ENV=production webpack",
        "build:dist": "tsc",
        "build": "npm run build:dist && npm run build:web",
        "start": "npm run watch",
        "watch": "NODE_ENV=development webpack --watch",
        "test": "jest --testMatch '<rootDir>/test/**/*.test.ts'",
        "format": "prettier --write .",
        "lint": "tsc --noEmit && eslint src/**/*.ts"
    }
}
